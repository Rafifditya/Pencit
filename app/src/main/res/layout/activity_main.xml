<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.faza.project.pencit.Activity.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/menu_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <ImageButton
                android:id="@+id/btn_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:contentDescription="@string/menu_button"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/ic_image" />

            <ImageButton
                android:id="@+id/btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/round_button"
                android:contentDescription="@string/menu_button"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/ic_camera" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="@dimen/splash_icon_min_size"
        android:layout_height="@dimen/splash_icon_min_size"
        android:layout_above="@id/cv_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_2x_vertical_margin"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_menu"
        android:layout_marginTop="@dimen/activity_2x_vertical_margin"
        android:background="@color/colorBg" />

</RelativeLayout>